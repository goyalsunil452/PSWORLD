# This is the root .editorconfig file for the project
root = true

# Global settings for all files
[*]
charset = utf-8                 # Use UTF-8 character encoding
indent_style = space             # Use spaces for indentation
indent_size = 2                  # Set indentation size to 2 spaces
insert_final_newline = true      # Ensure a newline at the end of the file
trim_trailing_whitespace = true  # Remove any trailing whitespace

# Settings specific to TypeScript files (*.ts)
[*.ts]
quote_type = single              # Use single quotes for strings

# Settings specific to Markdown files (*.md)
[*.md]
max_line_length = off            # Do not enforce a maximum line length
trim_trailing_whitespace = false # Allow trailing whitespace
